{
  "compilerOptions": {
    "target": "ES2020",
    "skipLibCheck": true,
    "lib": ["ES2020"],
    "module": "ES2020",
    "esModuleInterop": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "isolatedModules": true,
    "declaration": true
  },
  "include": ["src"]
}
